{
  "name": "animelist",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.11",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.2.0",
    "axios": "^0.19.2",
    "bootstrap": "^5.0.0-alpha1",
    "dotenv": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.2.0",
    "firebase": "^7.14.0",
    "firebase-admin": "^8.12.1",
    "history": "^4.10.1",
    "netlify": "^4.1.7",
    "popper.js": "^1.16.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-google-login": "^5.1.14",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.1",
    "serverless-http": "^2.5.0",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "start": "vercel dev",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "test:coverage": "react-app-rewired test --coverage --watchAll=false && start ./coverage/lcov-report/index.html",
    "deploy": "npm run build && firebase deploy && vercel --prod",
    "deploy:firebase": "npm run build && firebase deploy",
    "deploy:vercel": "vercel --prod",
    "eject": "react-scripts eject",
    "lint": "eslint src && eslint api",
    "lint:fix": "eslint --fix src && eslint --fix api"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "plugin:react-hooks/recommended",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "rules": {
      "@typescript-eslint/unbound-method": "off",
      "@typescript-eslint/no-for-in-array": "off",
      "@typescript-eslint/prefer-regexp-exec": "off",
      "no-constant-condition": "off"
    },
    "plugins": [
      "import"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/*.{js,jsx,ts,tsx}",
      "!src/utils/config/*.{js,jsx,ts,tsx}"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@babel/runtime": "^7.10.2",
    "@vercel/node": "^1.7.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "netlify-lambda": "^1.6.3",
    "prettier": "2.0.5",
    "query-string": "^6.3.0",
    "react-app-rewired": "^2.1.6"
  }
}
